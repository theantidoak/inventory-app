extends ../layout

block content

  h1 #{title}

  form.form(method='POST')
    div.form__group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Technology, Games, etc.' name='name' value=(genre===undefined ? '' : genre.name) required)
    div.form__group
      label(for='description') Description:
      textarea#description.form-control(placeholder='Description' name='description' required)= genre === undefined ? '' : genre.description
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg