extends ../layout

block content
  div.page
    h1.page__title= title

    if developer_list.length
      ul.page__items
        each developer in developer_list
          li.page__item
            a.page__item-link(href=developer.url) #{developer.name}

    else
      p There are no developers.

    a.page__action-link(href="/developers/create") 
