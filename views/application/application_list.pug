extends ../layout

block content
  div.page
    h1.page__title= title

    if application_list.length
      ul.page__items
        each application in application_list
          li.page__item
            a.page__item-link(href=application.url) #{application.name} | #{application.developer.name}

    else
      p There are no applications.

    a.page__action-link(href="applications/create")
